@{
  var column = Site.Columns;
}
<footer class="bg-gray-50 border-t border-gray-200 pt-24 pb-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-16 mb-20">
      <div class="col-span-1">
        <div class="flex items-center gap-2 mb-8">
          <img alt="@Site.CurrentSite.Name" src="@Site.CurrentSite.Logo.UrlReplace()"
                class="rounded-[8px] w-[50px] h-[50px]" /><span
            class="text-2xl font-bold text-gray-900 tracking-tight">@Site.CurrentSite.Name</span>
        </div>
        <p class="text-gray-500 leading-relaxed mb-8 font-light">@Site.CurrentSite.SeoDescribe</p>
        <div class="flex gap-4 hidder"><a href="#"
                                          class="w-10 h-10 rounded-full bg-white shadow-sm flex items-center justify-center text-gray-400 hover:text-red-600 hover:shadow-md transition-all"><i
              class="fab fa-weixin"></i></a><a href="#"
                                               class="w-10 h-10 rounded-full bg-white shadow-sm flex items-center justify-center text-gray-400 hover:text-red-600 hover:shadow-md transition-all"><i
              class="fab fa-weibo"></i></a><a href="#"
                                              class="w-10 h-10 rounded-full bg-white shadow-sm flex items-center justify-center text-gray-400 hover:text-red-600 hover:shadow-md transition-all"><i
              class="fab fa-tiktok"></i></a></div>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-3 col-span-1 lg:col-span-2 gap-8">
        <div>
          <h5 class="font-bold text-gray-900 mb-6 uppercase text-sm tracking-widest">快速导航</h5>
          <ul class="space-y-4 text-gray-500 font-light text-sm">
            @foreach (var item in column.Where(m => m.ParentId == 2006203810179059712))
            {
              <li>
                <a href="@item.LinkUrl"
                   class="hover:text-red-600 transition-colors">@item.Title</a>
              </li>
            }
          </ul>
        </div>
        <div>
          <h5 class="font-bold text-gray-900 mb-6 uppercase text-sm tracking-widest">产品中心</h5>
          <ul class="space-y-4 text-gray-500 font-light text-sm">
            @foreach (var item in column.Where(m => m.ParentId == 2006205910824914944))
            {
              <li>
                <a
                  href="@Site.Href(item.TemplateId, column.Find(m => m.Id == 2006203810179059712).EnTitle, item.EnTitle)"
                  class="hover:text-red-600">@item.Title</a>
              </li>
            }
          </ul>
        </div>
        <div id="contact">
          <h5 class="font-bold text-gray-900 mb-6 uppercase text-sm tracking-widest">联系方式</h5>
          <ul class="space-y-4 text-gray-500 font-light text-sm">
            <li class="flex gap-2"><i class="fas fa-phone text-red-600"></i> @Site.CurrentSite.CompanyTel</li>
            <li class="flex gap-2"><i class="fas fa-envelope text-red-600"></i> @Site.CurrentSite.CompanyEmail</li>
          </ul>
        </div>
      </div>
      <div
        class="col-span-1 bg-white p-8 rounded-[2rem] shadow-sm text-center border border-gray-100 flex flex-col items-center">
        <h5 class="font-bold text-gray-900 mb-4 text-sm uppercase tracking-widest">官方咨询通道</h5>
        <div class="w-32 h-32 bg-gray-50 rounded-2xl p-3 mb-4 border border-dashed border-gray-200"><img
            src="@Site.CurrentSite.Codes.UrlReplace()" alt="QR"
            class="w-full h-full opacity-70 hover:grayscale-0 transition-all w-[150px] h-[150px]"></div>
        <p class="text-xs text-gray-400 font-medium tracking-tight">扫描二维码预约免费评估</p>
      </div>
    </div>
    <div
      class="pt-8 border-t border-gray-200 flex flex-col md:flex-row justify-between items-center gap-4 text-[12px] text-gray-400 font-light uppercase tracking-tighter">
      <p>@Html.Raw(Site.CurrentSite.Copyright)</p>
      <div class="flex gap-6 hidder"><a href="#" class="hover:text-gray-900">沪ICP备2024000000号-1</a><a href="#"
                                                                                                         class="hover:text-gray-900">隐私权政策</a>
      </div>
    </div>
  </div>
</footer>
<div class="fixed right-6 bottom-10 flex flex-col gap-4 z-50"><a href="tel:@Site.CurrentSite.CompanyTel"
                                                                 class="w-14 h-14 bg-red-600 text-white rounded-full flex items-center justify-center shadow-2xl hover:scale-110 transition-transform"
                                                                 title="电话咨询"><i class="fas fa-phone"></i></a>
  <button id="scroll-top-btn"
          class="w-14 h-14 bg-white text-gray-900 border border-gray-100 rounded-full flex items-center justify-center shadow-xl hover:bg-gray-50 transition-colors"
          title="回到顶部"><i class="fas fa-arrow-up"></i></button>
</div>