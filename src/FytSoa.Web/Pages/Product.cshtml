@page "/product/{entitle?}"
@using FytSoa.Application.Cms
@using FytSoa.Common.Result
@inject CmsProductService _productService;
@{
  var entitle = RouteData.Values["entitle"];
  var productList = new PageResult<CmsProductDto>();
  var column = Site.Columns;
  var page = Request.Query["page"];
  page = string.IsNullOrEmpty(page) ? "1" : page.ToString();
  var parentColumn = column.FirstOrDefault(m => m.Id == 2006205910824914944);
  var nowColumn = new CmsColumnDto();
  ViewData["Title"] = nowColumn?.Title + "_" + Site.CurrentSite.SeoTitle;
  ViewData["Key"] = nowColumn?.KeyWord;
  ViewData["Desc"] = nowColumn?.Summary;
  if (entitle==null)
  {
    Console.WriteLine("为空");
    productList = await _productService.PagesAsync(new CmsProductParam()
    {
      Status = "1",Limit = 9,ColumnList = column.Where(m=>m.ParentId==2006205910824914944).Select(m=>m.Id).ToList()
    });
  }
  else
  {
    Console.WriteLine("不为空");
    nowColumn=column.Find(m => m.EnTitle == (string)entitle!);
    productList = await _productService.PagesAsync(new CmsProductParam()
    {
      Status = "1",Limit = 9,Id = nowColumn.Id
    });
  }
  
}
<main class="pt-24 pb-24 bg-gray-50">
  <section class="py-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <p class="text-xs text-gray-400 uppercase tracking-widest mb-3">PRODUCT CENTER</p>
      <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-4 mb-8">
        <div>
          <h1 class="text-3xl md:text-4xl font-black text-gray-900 mb-2">产品中心</h1>
          <p class="text-sm text-gray-500">
            @parentColumn?.Summary
          </p>
        </div>
      </div>

      <div class="flex flex-wrap gap-3 mb-10">
        @if (entitle == null)
        {
          <a href="/product"
             class="px-4 py-2 rounded-full border border-red-200 bg-red-50 text-red-600 text-sm font-medium hover:bg-red-600 hover:text-white transition-colors flex items-center gap-2">
            <span class="w-2 h-2 rounded-full bg-red-500"></span> 全部
          </a>
        }
        else
        {
          <a href="/product"
             class="px-4 py-2 rounded-full border border-gray-200 text-gray-600 text-sm font-medium hover:border-red-400 hover:text-red-600 transition-colors">
            全部
          </a>
        }
        @foreach (var item in column.Where(m => m.ParentId == 2006205910824914944))
        {
          if (entitle != null && item.EnTitle == (string)entitle!)
          {
            <a href="/product/@item.EnTitle"
               class="px-4 py-2 rounded-full border border-red-200 bg-red-50 text-red-600 text-sm font-medium hover:bg-red-600 hover:text-white transition-colors flex items-center gap-2">
              <span class="w-2 h-2 rounded-full bg-red-500"></span> @item.Title
            </a>
          }
          else
          {
            <a href="/product/@item.EnTitle"
               class="px-4 py-2 rounded-full border border-gray-200 text-gray-600 text-sm font-medium hover:border-red-400 hover:text-red-600 transition-colors">
              @item.Title
            </a>
          }
        }
      </div>

      <section id="cat-bed" class="pt-10">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-xl font-bold text-gray-900 flex items-center gap-2">
            <span class="w-1 h-6 rounded-full bg-red-500"></span> @nowColumn?.Title
          </h2>
          <span class="text-xs text-gray-400 uppercase tracking-widest">Voice Control Bed</span>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-3 gap-8">
          @foreach (var item in productList.Items)
          {
            <div
              class="group bg-white rounded-3xl overflow-hidden hover-lift border border-gray-100 flex flex-col h-full">
              <a href="/product/detail/@item.Id" class="aspect-[4/3] overflow-hidden block">
                <img
                  src="@item.ImgUrl.UrlReplace()"
                  alt="@item.Title"
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700">
              </a>
              <div class="p-7 flex flex-col flex-grow">
                <span
                  class="inline-block px-3 py-1 mb-3 rounded-full bg-red-50 text-red-600 text-[11px] font-bold tracking-widest uppercase self-baseline">@item.ColumnName</span>
                <a href="/product/detail/@item.Id" class="text-lg font-bold text-gray-900 mb-2 block">@item.Title</a>
                <p class="text-sm text-gray-500 mb-6 flex-grow">@item.Intro</p>
                <div class="flex items-center justify-between pt-4 border-t border-gray-50">
                  <span class="text-xs font-bold text-gray-400">@item.SubTitle</span>
                  <a href="/product/detail/@item.Id"
                     class="w-10 h-10 rounded-full bg-red-600 text-white flex items-center justify-center hover:rotate-45 transition-transform">
                    <i class="fas fa-arrow-right text-xs"></i>
                  </a>
                </div>
              </div>
            </div>
          }
        </div>
      </section>

      <div class="mt-8">
        <nav aria-label="产品分页" class="mt-5">
          <ul class="pagination flex justify-content-center product-pagination">
            @Html.Raw(PageHelper.Htmls(Convert.ToInt32(page), 12, Convert.ToInt32(productList.TotalItems), "/product/" + nowColumn?.EnTitle))
          </ul>
        </nav>
      </div>
    </div>
  </section>
</main>