@page "/column/{entitle}/{subtitle}"
@{
  var entitle = RouteData.Values["entitle"];
  var subtitle = RouteData.Values["subtitle"];
  var column = Site.Columns;
  var nowColumn = column.Find(m => m.EnTitle == (string)subtitle!);
  var parentColumn = column.Find(m => m.EnTitle == (string)entitle!);
  ViewData["Title"] = nowColumn?.Title + "_" + Site.CurrentSite.SeoTitle;
  ViewData["Key"] = nowColumn?.KeyWord;
  ViewData["Desc"] = nowColumn?.Summary;
}
<main class="pt-24 lg:pt-28 pb-20 flex-1 bg-gray-50">
  <section class="relative" id="about">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10 lg:py-14">
      <div class="flex flex-col lg:flex-row lg:items-start gap-8">
        <!-- 左侧：关于我们二级类目 -->
        <aside class="mb-6 lg:mb-0 lg:mr-4 lg:w-64 lg:flex-shrink-0 lg:sticky lg:top-28">
          <div
            class="bg-white border border-gray-200 rounded-3xl p-5 md:p-6 shadow-sm flex flex-col gap-4 relative overflow-hidden">
            <!-- 顶部标题区 -->
            <div class="flex items-center justify-between gap-3">
              <div>
                <p class="text-[11px] uppercase tracking-[0.26em] text-gray-400 mb-1">ABOUT CATEGORY</p>
                <h2 class="text-sm md:text-base font-semibold text-gray-900">关于我们</h2>
              </div>
              <div
                class="w-10 h-10 rounded-2xl bg-gradient-to-tr from-red-500 via-rose-400 to-amber-300 text-white flex items-center justify-center shadow-sm">
                <i class="fas fa-users text-sm"></i>
              </div>
            </div>

            <!-- 简短说明 -->
            <p class="text-[11px] text-gray-400 leading-relaxed">
              @parentColumn.Summary
            </p>
            <div class="flex flex-col gap-2 pt-1">
              @foreach (var item in column.Where(m => m.ParentId == parentColumn.Id))
              {
                if (item.EnTitle == (string)subtitle!)
                {
                  <a href="@Site.Href(item.TemplateId, (string)entitle!, item.EnTitle)"
                     class="w-full flex items-center justify-between px-4 py-2 rounded-2xl bg-gray-900 text-white text-xs font-semibold shadow-sm">
                    <div class="flex items-center gap-2">
                      <span
                        class="inline-flex items-center justify-center w-5 h-5 rounded-full bg-white/10 text-[10px]">
                        A
                      </span>
                      <span>@item.Title</span>
                    </div>
                    <i class="fas fa-check text-[11px] opacity-90"></i>
                  </a>
                }
                else
                {
                  <a href="@Site.Href(item.TemplateId, (string)entitle!, item.EnTitle)"
                     class="w-full flex items-center justify-between px-4 py-2 rounded-2xl bg-gray-50 border border-gray-100 text-gray-700 text-xs font-medium hover:bg-gray-900 hover:border-gray-900 hover:text-white transition-colors">
                    <div class="flex items-center gap-2">
                      <span class="w-1.5 h-1.5 rounded-full bg-sky-500"></span>
                      <span>@item.Title</span>
                    </div>
                    <i class="fas fa-chevron-right text-[10px] opacity-60"></i>
                  </a>
                }
              }
            </div>
          </div>
        </aside>

        <!-- 右侧：关于内容 -->
        <div class="flex-1">
          <div class="max-w-4xl mx-auto lg:mx-0">
            <!-- 顶部标题 -->
            <div class="mb-6 md:mb-8" id="about-section">
              <p class="text-xs text-red-500 uppercase tracking-[0.3em] mb-3 flex items-center gap-2">
                ABOUT US
                <span class="w-5 h-px bg-gray-300"></span>
                @nowColumn.Title
              </p>
            </div>

            <!-- 正文卡片：关于利鑫 + 团队精英等 -->
            <article
              class="bg-white border border-gray-200 rounded-2xl px-3 sm:px-8 md:px-5 py-8 md:py-5 shadow-[0_24px_70px_-40px_rgba(15,23,42,0.5)]">
              @Html.Raw(nowColumn.Content)
            </article>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>